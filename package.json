{
  "name": "aws-cdk-appsync-starter-ts",
  "version": "0.1.0",
  "scripts": {
    "lint": "prettier --write .",
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "gql:codegen": "graphql-codegen --config codegen.yml",
    "gql:compile": "npm run gql:compile:private; npm run gql:compile:public",
    "gql:compile:public": "graphql-schema-utilities -s \"{./graphql/public/*.graphql,./graphql/shared/*.graphql}\" -o build/public.graphql",
    "gql:compile:private": "graphql-schema-utilities -s \"{./graphql/private/*.graphql,./graphql/shared/*.graphql}\" -o build/private.graphql",
    "deploy": "cdk deploy",
    "predeploy": "npm run gql:codegen && npm run gql:compile",
    "prepare": "husky install",
    "pretest": "npm run gql:codegen && npm run gql:compile"
  },
  "devDependencies": {
    "@aws-amplify/auth": "^4.5.9",
    "@graphql-codegen/cli": "2.8.1",
    "@graphql-codegen/typescript": "2.7.1",
    "@graphql-codegen/typescript-resolvers": "2.7.1",
    "@shelf/jest-dynamodb": "^3.2.0",
    "@types/aws-lambda": "^8.10.101",
    "@types/jest": "^27.5.2",
    "@types/lodash.chunk": "^4.2.7",
    "@types/node": "10.17.27",
    "@types/portscanner": "^2.1.1",
    "@types/prettier": "2.6.0",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^8.3.4",
    "aws-cdk": "2.32.1",
    "graphql-schema-utilities": "^1.1.3",
    "husky": "^8.0.1",
    "jest": "^27.5.1",
    "jsonwebtoken": "^8.5.1",
    "lint-staged": "^13.0.3",
    "portscanner": "^2.2.0",
    "prettier": "^2.7.1",
    "supertest": "^6.2.4",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.8.1",
    "tsconfig-paths": "^4.0.0",
    "typescript": "~3.9.7",
    "yargs": "^17.5.1"
  },
  "dependencies": {
    "@aws-cdk/aws-appsync-alpha": "^2.32.1-alpha.0",
    "@aws-sdk/client-dynamodb": "^3.131.0",
    "@aws-sdk/lib-dynamodb": "^3.131.0",
    "@types/lodash.omit": "^4.5.7",
    "aws-cdk-lib": "2.32.1",
    "constructs": "^10.0.0",
    "graphql": "^16.5.0",
    "lodash.chunk": "^4.2.0",
    "lodash.omit": "^4.5.0",
    "source-map-support": "^0.5.21",
    "uuid": "^8.3.2",
    "winston": "^3.8.1"
  },
  "lint-staged": {
    "*.{graphql,ts,js,css,md}": "prettier --write"
  }
}
